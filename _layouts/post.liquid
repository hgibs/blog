<!doctype html>
<html {% include htmltag.liquid %} >
  <!-- Head -->
  <head>
    {% include head.liquid %}
  </head>

  <!-- Body -->
  <body>
    <!-- Header -->

    <!-- Content -->
    <main>
      <article>
        {{ content | safe }}

        <p>Published <time datetime="{{ page.date | date_to_xmlschema }}">{{ page.date | date: "%Y-%m-%d %H:%M" }}</time></p>
        <!-- TODO: add a modified time? possibly via front-matter? -->
      </article>
    </main>

    <!-- Footer -->
    <footer>
      <a href="/about/">{{ metadata.author.name }}</a>
    </footer>

    <!-- JavaScripts -->
    {% include scripts/mathjax.liquid %}
  </body>
</html>